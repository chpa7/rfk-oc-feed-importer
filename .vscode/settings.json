{
  "prettier.requireConfig": true,
  "beautify.ignore": "**/*.{js,ts,json,css,less,hbs}",
  "editor.formatOnSave": false,  // DONT TURN THIS ON, it applies vscode specific formatting that may clash with eslint/prettier
  "[handlebars]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
}